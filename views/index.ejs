<%- include('./partials/header.ejs') %>

    <h1> My Shoe Closet </h1>
    <h3> Collection </h3>
<nav>
    <button id="newBtn"> 
        <a href="/mycloset/new">Add a New Shoe</a>
    </button>
</nav>
    <div>
        <ul>
        <% for(let i = 0; i < shoes.length; i++) { %>
            <li>
                <a href="/mycloset/<%=shoes[i].id%>  ">
                <img src="<%= shoes[i].img %>">
                <p><%= shoes[i].name  %> </p>
                </a>
                <!-- Edit -->
                <button class="edit"><a href="/mycloset/<%=i%>/edit">Edit</a></button>
                <!-- Delete Form -->
                <form action="/mycloset/<%=shoes[i].id %>?_method=DELETE" method="POST">
                    <input type="button" value="Delete">
            </li>

       <% } %> 
    </ul>
    </div>

    <%- include('./partials/footer.ejs') %>