<%- include('./partials/header.ejs') %>
<div class="index_header">
    <h1> My Shoe Closet </h1>
    <h3> Collection </h3>
</div>
<nav id="new_Btn">
    <button> 
        <a href="/mycloset/new">Add a New Shoe</a>
    </button>
</nav>
    <div class="shoe_info">
        <ul>
        <% for(let i = 0; i < shoes.length; i++) { %>
            <li>
                <a href="/mycloset/<%=shoes[i].id%>  ">
                <img class="img" src="<%= shoes[i].img %>">
                <p><%= shoes[i].name  %> </p>
                </a>
                <!-- Edit -->
                <button><a href="/mycloset/<%=shoes[i].id; %>/edit">Edit</a></button>

                <!-- Delete Form -->
                <form action="/mycloset/<%=shoes[i].id %>?_method=DELETE" method="POST">
                    <input type="submit" value="Delete">
                </form>
            </li>

       <% } %> 
    </ul>
    </div>

    <%- include('./partials/footer.ejs') %>